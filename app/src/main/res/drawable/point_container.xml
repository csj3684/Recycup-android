        android:bottom = "1dp"
        android:top="1dp"
        android:start="1dp"
        android:end="1dp"
        >

        <shape
            android:shape="rectangle">
            <corners
                android:bottomLeftRadius="12dp"
                android:bottomRightRadius="12dp"
